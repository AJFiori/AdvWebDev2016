extends layout

block content
 h1=title
 p
    a(href="./" class="btn btn-primary") Home
    a(href="./form" class="btn btn-primary") Form
    a(href="./about" class="btn btn-primary") About
 h2=message
 form.form-horizontal(action="/form", method="post", role="form")
        .form-group
          label.control-label(for="name") Name:         
            input#name.form-control(name="name")  
            
            label.control-label(for="email") Email:
                input#email.form-control(name="email")

                label.control-label(for="comment") Comments:
                    input#comment.form-control(name="comment")
        input(class="btn btn-primary" type="submit" value="Add my review") 
