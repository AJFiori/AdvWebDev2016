extends layout

block content
 h1=title
 p

 h2=message
 form.form-horizontal(action="/", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="product") Product:
          .col-xs-12.col-sm-10
            input#name.form-control(name="product" required)
            br
          label.col-xs-10.col-sm-2.control-label(for="description") Description:
          .col-xs-12.col-sm-10
            input#name.form-control(name="description" required)
            br
          label.col-xs-10.col-sm-2.control-label(for="price") Price:
          .col-xs-12.col-sm-10
            input#price.form-control(name="price" required)
            br
            input(class="btn btn-success center-block" type="submit" value="Add New Product") 
